<h1>New Article</h1>
<%= form_for :article, url: articles_path do |f| %>
    <p>
        <%= f.label :title %>
    </p>
    <p>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :text %>
    </p>
    <p>
        <%= f.text_area :text %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>